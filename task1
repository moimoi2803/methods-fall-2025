@prefix : <http://example.org/sports#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
:Sport rdf:type owl:Class ;
    rdfs:label "Sport" .

:Athlete rdf:type owl:Class ;
    rdfs:label "Athlete" .

:Team rdf:type owl:Class ;
    rdfs:label "Team" .

:Equipment rdf:type owl:Class ;
    rdfs:label "Equipment" .

:usesEquipment rdf:type owl:ObjectProperty ;
    rdfs:label "uses equipment" .

:playsFor rdf:type owl:ObjectProperty ;
    rdfs:label "plays for" .

:originatedIn rdf:type owl:ObjectProperty ;
    rdfs:label "originated in" .

:Football rdf:type :Sport ;
    rdfs:label "Football" ;
    :usesEquipment :FootballBall ;
    :originatedIn :England .

:LionelMessi rdf:type :Athlete ;
    rdfs:label "Lionel Messi" ;
    :playsFor :InterMiami ;
    :usesEquipment :FootballBall .

:Basketball rdf:type :Sport ;
    rdfs:label "Basketball" ;
    :usesEquipment :BasketballBall ;
    :originatedIn :USA .

:FootballBall rdf:type :Equipment ;
    rdfs:label "Football Ball" .

:BasketballBall rdf:type :Equipment ;
    rdfs:label "Basketball Ball" .

:InterMiami rdf:type :Team ;
    rdfs:label "Inter Miami" .

:England rdf:type owl:Thing ;
    rdfs:label "England" .

:USA rdf:type owl:Thing ;
    rdfs:label "USA" .
